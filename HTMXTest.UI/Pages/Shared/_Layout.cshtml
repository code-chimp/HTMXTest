<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <title>@ViewData["Title"] - HTMXTest.UI</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/css/fontawesome/all.min.css"/>
    @await RenderSectionAsync("head", false)
</head>
<body>
<div class="col-lg-8 mx-auto p-3 py-md-5">
    <header class="d-flex align-items-center pb-3 mb-5 border-bottom">
        <a asp-page="Index" class="d-flex align-items-center text-dark text-decoration-none">
            <img src="~/img/jetbrains.png" alt="jetbrains logo" width="40" class="me-2"/>
            <span class="fs-4">Getting Started with HTMX - <i class="fa fa-exclamation-triangle text-warning"></i> Incomplete</span>
        </a>
    </header>

    <main role="main" class="col-8">
        @RenderBody()
        @await Html.PartialAsync("Pagination")
    </main>

    <footer class="pt-5 my-5 text-muted border-top">
        <div class="container">
            &copy; 2024 - HTMXTest.UI
        </div>
    </footer>
</div>

<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/lib/htmx/htmx.min.js"></script>
@await RenderSectionAsync("end", false)
</body>
</html>